.inner-table
  width 100%
  border-collapse collapse
  font-size 15px
  line-height 1.25

.inner-table_footer .inner-table__data
  padding 27px 0

.inner-table_semibold
  @extends .text__semibold

.inner-table_padding
  padding-left 20px !important

.table__checkbox:checked + .table__content .inner-table
  @extends .text__regular

.inner-table__data
  text-align center
  padding 26px 0

  &_left
    text-align left

.inner-table__arrow
  background url('static/inner-table__arrow.svg') no-repeat
  background-size 9px 14px
  padding-left 20px
  background-position left center

.table__checkbox:checked + .table__content .inner-table__arrow
  background-image url('static/inner-table__arrow_down.svg')
  background-size 15px 10px
