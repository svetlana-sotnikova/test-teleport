.table
  width 100%
  margin 60px 0 40px 0
  border-collapse collapse

// .table__row
  // border-bottom 1px solid cGrey2
  // border-top @border-bottom

.table__data
  padding 0

.table__content
  border-top 1px solid cGrey2

  .table__row:last-child > .table__data > &
    border-bottom @border-top

  .table__row:nth-child(odd) > .table__data > &
    background cWhiteGrey

.table__content_header
  border-top 1px solid cLightGrey
  background cGrey3 !important
  color cGrey4

.table__content_footer
  border-bottom 1px solid cLightGrey !important
  background cGrey3 !important
  color cGrey4

.table__checkbox
  display none

  &:checked + .table__content
    background cSky !important
    border-top 1px solid cCyan
    border-bottom @border-top
    margin-bottom -1px
    z-index 1
    position relative

.table__col1
  width 20%

.table__col
  width 11.5%

.table__col3
  width 12%

.table__col4
  width 8.5%

.table__col5
  width 7.5%

.table__col6
  width 12%

.table__col7
  width 7%

.table__col8
  width 7%

.table__col9
  width 8%

.table__col10
  width 6.5%
